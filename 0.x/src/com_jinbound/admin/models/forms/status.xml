<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset
		name="default"
		label="COM_JINBOUND_STATUS_FIELDSET_DEFAULT"
	>
		<field
			id="name" name="name"
			type="text"
			label="COM_JINBOUND_NAME"
			description="COM_JINBOUND_NAME_DESC"
			class="input-block-level"
			size="30"
			required="true"
		/>

		<field
			id="description" name="description"
			type="textarea"
			label="COM_JINBOUND_STATUS_DESCRIPTION"
			description="COM_JINBOUND_STATUS_DESCRIPTION_DESC"
			class="input-block-level"
		/>

		<field
			id="published" name="published"
			type="jinboundpublished"
			label="COM_JINBOUND_PUBLISHED"
			description="COM_JINBOUND_PUBLISHED_DESC"
			class="input-medium"
			default="1"
		/>
		
		<field
			id="active" name="active"
			type="list"
			label="COM_JINBOUND_ACTIVE"
			description="COM_JINBOUND_ACTIVE_DESC"
			default="0"
			class="input-medium"
		>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field
			id="id" name="id"
			type="hidden"
			class="readonly"
			label="COM_JINBOUND_ID"
			default="0"
			readonly="true"
		/>

	</fieldset>

</form>