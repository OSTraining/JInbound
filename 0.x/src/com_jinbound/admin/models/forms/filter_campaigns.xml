<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_JINBOUND_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string"
		/>
		<field
			name="published"
			type="status"
			label="COM_JINBOUND_FILTER_PUBLISHED"
			filter="0,1,-2"
			description="COM_JINBOUND_FILTER_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			description="JGLOBAL_SORT_BY"
			onchange="this.form.submit();"
			default=""
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="Campaign.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="Campaign.id DESC">JGRID_HEADING_ID_DESC</option>
			<option value="Campaign.name ASC">Campaign Name ascending</option>
			<option value="Campaign.name DESC">Campaign Name descending</option>
			<option value="Campaign.published ASC">Published ascending</option>
			<option value="Campaign.published DESC">Published descending</option>
			<option value="Campaign.created ASC">Created ascending</option>
			<option value="Campaign.created DESC">Created descending</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_JINBOUND_LIST_LIMIT"
			description="COM_JINBOUND_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
