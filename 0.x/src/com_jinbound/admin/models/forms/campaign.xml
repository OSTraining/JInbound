		name="default"
		label="COM_JINBOUND_CAMPAIGN_FIELDSET_DEFAULT"
	>
		<field
			id="campaign_tips" name="campaign_tips"
			type="jinboundtips"
		/>
		
		<field
			id="id" name="id"
			type="hidden"
			class="readonly"
			label="COM_JINBOUND_ID"
			default="0"
			readonly="true"
		/>
		
		<field
			id="name" name="name"
			type="text"
			label="COM_JINBOUND_CAMPAIGN_NAME"
			description="COM_JINBOUND_CAMPAIGN_NAME_DESC"
			class="input-block-level"
			size="30"
			required="true"
		/>

		<field
			id="published" name="published"
			type="jinboundpublished"
			label="JPUBLISHED"
			description="COM_JINBOUND_CAMPAIGN_PUBLISHED_DESC"
			class="input-block-level"
			default="1"
		/>

	</fieldset>
