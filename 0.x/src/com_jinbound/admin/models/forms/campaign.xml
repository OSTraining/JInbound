<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset
		name="default"
		label="COM_JINBOUND_CAMPAIGN_FIELDSET_DEFAULT"
	>
		<field
			id="id" name="id"
			type="hidden"
			class="readonly"
			label="COM_JINBOUND_ID"
			default="0"
			readonly="true"
		/>
		
		<field
			id="name" name="name"
			type="text"
			label="COM_JINBOUND_CAMPAIGN_NAME"
			description="COM_JINBOUND_CAMPAIGN_NAME_DESC"
			class="input-block-level"
			size="30"
			required="true"
		/>

	</fieldset>
	<fieldset
		name="content"
		label="COM_JINBOUND_CAMPAIGN_FIELDSET_DEFAULT"
	>
		<field
			id="published" name="published"
			type="jinboundpublished"
			label="JPUBLISHED"
			description="COM_JINBOUND_CAMPAIGN_PUBLISHED_DESC"
			class="input-block-level"
			default="1"
		/>
		
		<field
			id="conversion_url" name="conversion_url"
			type="text"
			label="COM_JINBOUND_CONVERSION_URL"
			description="COM_JINBOUND_CONVERSION_URL_DESC"
			class="input-block-level"
		/>

		<field
			id="greedy" name="greedy"
			type="radio"
			label="COM_JINBOUND_GREEDY_CAMPAIGN"
			description="COM_JINBOUND_GREEDY_CAMPAIGN_DESC"
			class="radio btn-group btn-group-yesno"
			default="0"
		>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

	</fieldset>
</form>