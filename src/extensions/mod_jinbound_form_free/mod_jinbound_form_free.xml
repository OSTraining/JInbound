<?xml version="1.0" encoding="utf-8"?>
<extension type="module" position="default" client="site" method="upgrade" version="2.5">
	<name>jInbound Form</name>
    <creationDate></creationDate>
    <author>Joomlashack</author>
    <authorEmail>help@joomlashack.com</authorEmail>
    <authorUrl>http://joomlashack.com</authorUrl>
    <copyright>Copyright (c) 2006-2012 Anything-Digital.com - 2016-2017 Open Source Training, LLC</copyright>
    <license>GNU/GPL</license>
    <version>2.1.7</version>
	<description>MOD_JINBOUND_FORM_FREE_DESCRIPTION</description>
	<files>
		<filename module="mod_jinbound_form_free">mod_jinbound_form_free.php</filename>
		<filename module="mod_jinbound_form_free">helper.php</filename>
		<filename module="mod_jinbound_form_free">mod_jinbound_form_free.xml</filename>
		<filename module="mod_jinbound_form_free">tmpl/default.php</filename>
		<filename>language/en-GB/en-GB.mod_jinbound_form_free.ini</filename>
		<filename>language/en-GB/en-GB.mod_jinbound_form_free.sys.ini</filename>
	</files>
	<config addfieldpath="/administrator/components/com_jinbound/models/fields">
		<fields name="params">
			<fieldset name="basic">
				<field
                    name="formid"
                    type="jinboundform"
                    label="MOD_JINBOUND_FORM_FREE_FORMID"
                    description="MOD_JINBOUND_FORM_FREE_FORMID_DESC"
                />
				<field
                    name="campaignid"
                    type="jinboundcampaignlist"
                    label="MOD_JINBOUND_FORM_FREE_CAMPAIGNID"
                    description="MOD_JINBOUND_FORM_FREE_CAMPAIGNID_DESC"
                />
		<field
            id="submit_text" name="submit_text"
            type="text"
            label="MOD_JINBOUND_FORM_FREE_SUBMIT_TEXT"
            description="MOD_JINBOUND_FORM_FREE_SUBMIT_TEXT_DESC"
            class="input-block-level"
        />
		<field
            id="notification_email" name="notification_email"
            type="text"
            label="MOD_JINBOUND_FORM_FREE_NOTIFICATION_EMAIL"
            description="MOD_JINBOUND_FORM_FREE_NOTIFICATION_EMAIL_DESC"
            class="input-block-level"
        />

		<field
            id="after_submit_sendto" name="after_submit_sendto"
            type="list"
            label="MOD_JINBOUND_FORM_FREE_AFTER_SUBMIT_SENDTO"
            description="MOD_JINBOUND_FORM_FREE_AFTER_SUBMIT_SENDTO_DESC"
            default="message"
            class="input-large"
        >
			<option value="menuitem">MOD_JINBOUND_FORM_FREE_MENU_ITEM</option>
			<option value="url">MOD_JINBOUND_FORM_FREE_REDIRECT_TO_URL</option>
			<option value="message">MOD_JINBOUND_FORM_FREE_MESSAGE</option>
		</field>

		<field
            id="menu_item" name="menu_item"
            type="menuitem"
            label="MOD_JINBOUND_FORM_FREE_MENU_ITEM"
            description="MOD_JINBOUND_FORM_FREE_MENU_ITEM_DESC"
            class="input-large"
        />

		<field
            id="send_to_url" name="send_to_url"
            type="text"
            label="MOD_JINBOUND_FORM_FREE_SEND_TO_URL"
            description="MOD_JINBOUND_FORM_FREE_SEND_TO_URL_DESC"
            class="input-block-level"
        />

		<field
            id="sendto_message" name="sendto_message"
            type="textarea"
            label="MOD_JINBOUND_FORM_FREE_SENDTO_MESSAGE"
            description="MOD_JINBOUND_FORM_FREE_SENDTO_MESSAGE_DESC"
            class="input-block-level"
        />
			</fieldset>
			<fieldset name="advanced">
				<field name="moduleclass_sfx" type="textarea" rows="3" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                       description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>
			</fieldset>
		</fields>
	</config>
</extension>
