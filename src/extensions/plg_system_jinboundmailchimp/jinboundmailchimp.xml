<?xml version="1.0" encoding="UTF-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>plg_system_jinboundmailchimp</name>
    <creationDate></creationDate>
    <author>Joomlashack</author>
    <authorEmail>help@joomlashack.com</authorEmail>
    <authorUrl>http://joomlashack.com</authorUrl>
    <copyright>Copyright (c) 2006-2012 Anything-Digital.com - 2016-2017 Open Source Training, LLC</copyright>
    <license>GNU/GPL</license>
    <version>2.1.7</version>
	<description>PLG_SYSTEM_JINBOUNDMAILCHIMP_DESCRIPTION</description>
	<scriptfile>jinboundmailchimp.install.php</scriptfile>
	<updateservers>
		<server type="collection" name="plg_system_jinboundmailchimp">https://jinbound.com/index.php?option=com_ars&amp;view=update&amp;task=category&amp;id=plugins&amp;format=xml&amp;dummy=extension.xml</server>
		<server type="extension" name="plg_system_jinboundmailchimp">https://jinbound.com/index.php?option=com_ars&amp;view=update&amp;task=stream&amp;id=6&amp;format=xml&amp;dummy=extension.xml</server>
	</updateservers>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_system_jinboundmailchimp.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_system_jinboundmailchimp.sys.ini</language>
	</languages>
	<files>
		<filename plugin="jinboundmailchimp">jinboundmailchimp.php</filename>
		<filename>field/jinboundmailchimpcontactinfo.php</filename>
		<filename>field/jinboundmailchimpfields.php</filename>
		<filename>field/jinboundmailchimpgroups.php</filename>
		<filename>field/jinboundmailchimplists.php</filename>
		<filename>form/jinboundmailchimp.xml</filename>
		<filename>form/jinboundmailchimpcontact.xml</filename>
		<filename>form/jinboundmailchimpfield.xml</filename>
		<filename>language/en-GB/en-GB.plg_system_jinboundmailchimp.ini</filename>
		<filename>language/en-GB/en-GB.plg_system_jinboundmailchimp.sys.ini</filename>
		<filename>library/MCAPI.class.php</filename>
		<filename>library/helper.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/plugins/system/jinboundmailchimp/field">
				<field name="mailchimp_key" type="text" size="32" default=""
                       label="PLG_SYSTEM_JINBOUNDMAILCHIMP_APIKEY_TITLE"
                       description="PLG_SYSTEM_JINBOUNDMAILCHIMP_APIKEY_DESC"/>
				<field name="addlists" type="hidden" default=""/>
				<field name="removelists" type="hidden" default=""/>
				<field name="email_type" type="radio" default="html"
                       label="PLG_SYSTEM_JINBOUNDMAILCHIMP_EMAILTYPE_LABEL"
                       description="PLG_SYSTEM_JINBOUNDMAILCHIMP_EMAILTYPE_DESC">
					<option value="html">PLG_SYSTEM_JINBOUNDMAILCHIMP_EMAILTYPE_HTML</option>
					<option value="text">PLG_SYSTEM_JINBOUNDMAILCHIMP_EMAILTYPE_TEXT</option>
					<option value="mobile">PLG_SYSTEM_JINBOUNDMAILCHIMP_EMAILTYPE_MOBILE</option>
				</field>
				<field name="double_optin" type="radio" default="false"
                       label="PLG_SYSTEM_JINBOUNDMAILCHIMP_DOUBLEOPTIN_LABEL"
                       description="PLG_SYSTEM_JINBOUNDMAILCHIMP_DOUBLEOPTIN_DESC">
					<option value="true">PLG_SYSTEM_JINBOUNDMAILCHIMP_DOUBLEOPTIN_TRUE</option>
					<option value="false">PLG_SYSTEM_JINBOUNDMAILCHIMP_DOUBLEOPTIN_FALSE</option>
				</field>
				<field name="send_welcome" type="radio" default="true"
                       label="PLG_SYSTEM_JINBOUNDMAILCHIMP_WELCOME_LABEL"
                       description="PLG_SYSTEM_JINBOUNDMAILCHIMP_WELCOME_DESC">
					<option value="true">PLG_SYSTEM_JINBOUNDMAILCHIMP_WELCOME_TRUE</option>
					<option value="false">PLG_SYSTEM_JINBOUNDMAILCHIMP_WELCOME_FALSE</option>
				</field>
				<field name="send_goodbye" type="radio" default="true"
                       label="PLG_SYSTEM_JINBOUNDMAILCHIMP_GOODBYE_LABEL"
                       description="PLG_SYSTEM_JINBOUNDMAILCHIMP_GOODBYE_DESC">
					<option value="true">PLG_SYSTEM_JINBOUNDMAILCHIMP_GOODBYE_TRUE</option>
					<option value="false">PLG_SYSTEM_JINBOUNDMAILCHIMP_GOODBYE_FALSE</option>
				</field>
				<field name="send_notify" type="radio" default="false" label="PLG_SYSTEM_JINBOUNDMAILCHIMP_NOTIFY_LABEL"
                       description="PLG_SYSTEM_JINBOUNDMAILCHIMP_NOTIFY_DESC">
					<option value="true">PLG_SYSTEM_JINBOUNDMAILCHIMP_NOTIFY_TRUE</option>
					<option value="false">PLG_SYSTEM_JINBOUNDMAILCHIMP_NOTIFY_FALSE</option>
				</field>
				<field name="delete_member" type="radio" default="false"
                       label="PLG_SYSTEM_JINBOUNDMAILCHIMP_DELETEMEMBER_LABEL"
                       description="PLG_SYSTEM_JINBOUNDMAILCHIMP_DELETEMEMBER_DESC">
					<option value="true">PLG_SYSTEM_JINBOUNDMAILCHIMP_DELETEMEMBER_TRUE</option>
					<option value="false">PLG_SYSTEM_JINBOUNDMAILCHIMP_DELETEMEMBER_FALSE</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
