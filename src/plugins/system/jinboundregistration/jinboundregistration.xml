<?xml version="1.0" encoding="UTF-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>plg_system_jinboundregistration</name>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<creationDate>@ant_current_date@</creationDate>
	<author>Anything Digital</author>
	<authorEmail>admin@anything-digital.com</authorEmail>
	<authorUrl>http://anything-digital.com</authorUrl>
	<copyright>@ant_xml_copyright@</copyright>
	<license>GNU/GPL</license>
	<version>@ant_registration_version_number@</version>
	<description>PLG_SYSTEM_JINBOUNDREGISTRATION_XML_DESCRIPTION</description>
	<scriptfile>jinboundregistration.install.php</scriptfile>
	<updateservers>
		<server type="collection" name="plg_system_jinboundregistration">https://jinbound.com/index.php?option=com_ars&amp;view=update&amp;task=category&amp;id=plugins&amp;format=xml&amp;dummy=extension.xml</server>
		<server type="extension" name="plg_system_jinboundregistration">https://jinbound.com/index.php?option=com_ars&amp;view=update&amp;task=stream&amp;id=9&amp;format=xml&amp;dummy=extension.xml</server>
	</updateservers>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_system_jinboundregistration.sys.ini</language>
	</languages>
	<files>
		<filename plugin="jinboundregistration">jinboundregistration.php</filename>
		<filename>field/jinboundregistrationupdate.php</filename>
		<filename>language/en-GB/en-GB.plg_system_jinboundregistration.sys.ini</filename>
		<filename>liveupdate/config.php</filename>
		<filename>liveupdate/liveupdate.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/plugins/system/jinboundregistration/field">
				<field name="update" type="jinboundregistrationupdate"
							 label="PLG_SYSTEM_JINBOUNDREGISTRATION_UPDATE"
							 description="PLG_SYSTEM_JINBOUNDREGISTRATION_UPDATE_DESC"
				/>
				<field name="downloadid" type="text"
							 label="PLG_SYSTEM_JINBOUNDREGISTRATION_DOWNLOADID"
							 description="PLG_SYSTEM_JINBOUNDREGISTRATION_DOWNLOADID_DESC"
				/>
			</fieldset>
		</fields>
	</config>
</extension>