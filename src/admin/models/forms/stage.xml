<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset
        name="top"
        label="COM_JINBOUND_STATUS_FIELDSET_TOP"
    >
		<field
            id="name" name="name"
            type="text"
            label="COM_JINBOUND_NAME"
            description="COM_JINBOUND_NAME_DESC"
            class="inputbox"
            size="30"
            required="true"
        />

		<field
            id="description" name="description"
            type="text"
            label="COM_JINBOUND_STATUS_DESCRIPTION"
            description="COM_JINBOUND_STATUS_DESCRIPTION_DESC"
            class="inputbox"
        />

		<field
            id="published" name="published"
            type="jinbound.published"
            label="COM_JINBOUND_PUBLISHED"
            description="COM_JINBOUND_PUBLISHED_DESC"
            default="1"
        />

	</fieldset>

	<fieldset
        name="hidden"
        label="COM_JINBOUND_STATUS_FIELDSET_HIDDEN"
    >

		<field
            id="id" name="id"
            type="hidden"
            class="readonly"
            label="COM_JINBOUND_ID"
            default="0"
            readonly="true"
        />

	</fieldset>

</form>
