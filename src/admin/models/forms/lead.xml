<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset
        name="leadname"
        label="COM_JINBOUND_LEAD_FIELDSET_LEADNAME"
    >
		<field
            id="first_name" name="first_name"
            type="text"
            label="COM_JINBOUND_FIRST_NAME"
            description="COM_JINBOUND_FIRST_NAME_DESC"
            class="input-block-level input-large-text"
        />
		<field
            id="last_name" name="last_name"
            type="text"
            label="COM_JINBOUND_LAST_NAME"
            description="COM_JINBOUND_LAST_NAME_DESC"
            class="input-block-level input-large-text"
        />
	</fieldset>
	<fieldset
        name="profile"
        label="COM_JINBOUND_LEAD_FIELDSET_PROFILE"
    >
		<field
            id="phone_number" name="phone_number"
            type="text"
            label="COM_JINBOUND_PHONE"
            description="COM_JINBOUND_PHONE_DESC"
            class="input-block-level"
        />
		<field
            id="email" name="email"
            type="text"
            label="COM_JINBOUND_EMAIL"
            description="COM_JINBOUND_EMAIL_DESC"
            class="input-block-level"
        />
		<field
            id="company" name="company"
            type="text"
            label="COM_JINBOUND_COMPANY"
            description="COM_JINBOUND_COMPANY_DESC"
            class="input-block-level"
        />
		<field
            id="website" name="website"
            type="text"
            label="COM_JINBOUND_WEBSITE"
            description="COM_JINBOUND_WEBSITE_DESC"
            class="input-block-level"
        />
		<field
            id="address" name="address"
            type="text"
            label="COM_JINBOUND_ADDRESS"
            description="COM_JINBOUND_ADDRESS_DESC"
            class="input-block-level"
        />
		<field
            id="suburb" name="suburb"
            type="text"
            label="COM_JINBOUND_PAGE_FIELD_SUBURB"
            description="COM_JINBOUND_PAGE_FIELD_SUBURB_DESC"
            class="input-block-level"
        />
		<field
            id="state" name="state"
            type="text"
            label="COM_JINBOUND_PAGE_FIELD_STATE"
            description="COM_JINBOUND_PAGE_FIELD_STATE_DESC"
            class="input-block-level"
        />
		<field
            id="country" name="country"
            type="text"
            label="COM_JINBOUND_PAGE_FIELD_COUNTRY"
            description="COM_JINBOUND_PAGE_FIELD_COUNTRY_DESC"
            class="input-block-level"
        />
		<field
            id="postcode" name="postcode"
            type="text"
            label="COM_JINBOUND_PAGE_FIELD_POSTCODE"
            description="COM_JINBOUND_PAGE_FIELD_POSTCODE_DESC"
            class="input-block-level"
        />
	</fieldset>

	<fieldset
        name="details"
        label="COM_JINBOUND_LEAD_FIELDSET_DETAILS"
    >
		<field
            id="contact_id" name="contact_id"
            type="hidden"
            label="COM_JINBOUND_CONTACT"
            description="COM_JINBOUND_CONTACT_DESC"
            class="input-block-level"
            readonly="true"
        />

		<field
            id="id" name="id"
            type="hidden"
            class="readonly"
            label="COM_JINBOUND_ID"
            default="0"
            readonly="true"
        />

		<field
            id="ip" name="ip"
            type="hidden"
            class="readonly"
            label="COM_JINBOUND_IP"
            readonly="true"
        />

		<field
            id="published" name="published"
            type="jinboundpublished"
            label="COM_JINBOUND_PUBLISHED"
            description="COM_JINBOUND_PUBLISHED_DESC"
            class="input-medium"
            default="1"
        />

		<field
            id="priority_id" name="priority_id"
            type="jinboundpriorities"
            label="COM_JINBOUND_PRIORITY"
            description="COM_JINBOUND_PRIORITY_DESC"
            class="input-block-level"
        />

		<field
            id="status_id" name="status_id"
            type="jinboundstatuses"
            label="COM_JINBOUND_STATUS"
            description="COM_JINBOUND_STATUS_DESC"
            class="input-block-level"
        />

		<field
            id="campaign_id" name="campaign_id"
            type="jinboundcampaignlist"
            label="COM_JINBOUND_CAMPAIGN"
            description="COM_JINBOUND_CAMPAIGN_DESC"
            class="input-block-level"
        >
			<option value="0">JNONE</option>
		</field>
	</fieldset>

</form>
